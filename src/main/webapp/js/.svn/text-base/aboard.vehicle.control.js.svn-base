	$("#add").click(function(){
		window.location.href = "aboard_vehicleadd.html";
	});
	
	$("#edit").click(function(){
		var ids = [];
		$("#vehicle_dataTables tr[class = 'selction']").each(function(i,e) {
			ids[i] = $(this).children("td").eq(0).html();
		});
		
		if(ids.length == 1){
			var hardware_id = ids[0];
			window.location.href = "aboard_vehicleedit.html?id="+hardware_id;
		}else{
			alert("每次只能编辑一辆拖拉机的信息");
			window.location.reload();
		}
	});
	
	$("#delete").click(function(){
		var ids = [];
		$("#vehicle_dataTables tr[class = 'selction']").each(function(i,e) {
			ids[i] = $(this).children("td").eq(0).html();
		});
		
		if(ids.length == 0){
			alert('未选择拖拉机');
		}else{
			var hardwareids = ids.join(",");
			
			$.ajax( {    
	    	    url:"gps/aboardvehicleinfo/del",   
	    	    data:{    
	    	    	hardware_id : hardwareids
	    	    },    
	    	    type:"POST", 
	    	    async: false,
	    	    dataType:"json",    
	    	    success:function(data) {    
	    	        if(data.state == "true"){    
	    	        	alert('车辆信息删除成功');
	    	        }else{ 
	    	        	alert('系统错误(AVEHDEL001)，请联系系统管理员');    
	    	        }    
	    	     },    
	    	     error : function(data) {       
	    	    	 alert('系统错误(AVEHDEL002)，请联系系统管理员');    
	    	     }    
	    	});
			
			window.location.reload();
		}
	});
});

function sendcommand(command){
	alert(command);
	var ids = [];
	var imsis = [];
	$("#vehicle_dataTables tr[class = 'selction']").each(function(i,e) {
		ids[i] = $(this).children("td").eq(0).html();
		imsis[i] = $(this).children("td").eq(3).html();
	});
	
	if(ids.length == 0){
		alert('未选择拖拉机');
	}else if(ids.length == 1){
		var hardware_id = ids[0];
		var imsi = imsis[0];
		$.ajax( {    
    	    url:"/gps/vehiclecontrol/sendcommand",   
    	    data:{    
    	    	  hardware_id : hardware_id, 
    	          imsi : imsi,
    	    	  value : command,
    	    },    
    	    type:"POST", 
    	    async: false,
    	    dataType:"text",    
    	    success:function(data) { 
    	        if(data == "true"){    
    	        	alert('指令发送成功');
    	        }else{ 
    	        	alert('系统错误(AVEHCON001)，请联系系统管理员');    
    	        }    
    	     },    
    	     error : function(data) {       
    	    	 alert('系统错误(AVEHCON002)，请联系系统管理员');    
    	     }    
    	}); 
	}else{
		alert('每次只能对一辆拖拉机进行控制');
	}
	location.reload();
}